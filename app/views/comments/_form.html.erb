<%= form_for([@article, @article.comments.build], :html => { :class => "form-horizontal" }) do |f| %>

  <div class="control-group">
    <%= f.label :commenter, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :commenter, :class => 'form-control' %>
    </div>
    <%= error_span(@article[:commenter]) %>
  </div>
  <div class="control-group">
    <%= f.label :body, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :body, :class => 'form-control' %>
    </div>
    <%= error_span(@article[:body]) %>
  </div>

  <p></p>

  <%= f.submit nil, :class => 'btn btn-primary' %>

<% end %>
